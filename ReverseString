import java.util.Scanner;

public class ReverseString {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        System.out.println("Enter a String:");
        String a = s.nextLine();
        String b = "";
        int ptr = a.length() - 1;
        while (ptr >= 0) {
            b = b + a.charAt(ptr);
            ptr--;
        }
        System.out.println("After Reversing:");
        System.out.print(b);
    }
}
